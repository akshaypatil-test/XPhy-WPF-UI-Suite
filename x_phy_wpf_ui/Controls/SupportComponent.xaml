<UserControl x:Class="x_phy_wpf_ui.Controls.SupportComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        <!-- Glass-style border: cyan fading to transparent (top to bottom) -->
        <LinearGradientBrush x:Key="CardBorderBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1AB4CC" Offset="0"/>
            <GradientStop Color="#801AB4CC" Offset="0.5"/>
            <GradientStop Color="Transparent" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Support Resources Button Style -->
        <Style x:Key="SupportResourceButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Brush.Card}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource Brush.SurfaceHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Doc Row Card Style -->
        <Style x:Key="DocRowCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Brush.Card}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
        </Style>
        
        <!-- Doc Button Style -->
        <Style x:Key="DocButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Brush.Surface}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="56"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="docBtnBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="docBtnBorder" Property="Background" Value="{DynamicResource Brush.SurfaceHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Back Button Style -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.TextSecondary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back Button -->
        <Button Grid.Row="0"
                Content="â† Back to Detection"
                Style="{StaticResource BackButtonStyle}"
                Click="BackButton_Click"
                Margin="0,0,0,12"
                HorizontalAlignment="Left"/>

        <!-- Header: title large white, subtitle smaller white per Figma -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Support"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{DynamicResource Brush.TextPrimary}"/>
            <TextBlock Text="Access Support Resources And Documentation"
                       FontSize="14"
                       Foreground="{DynamicResource Brush.TextSecondary}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Support Resources: bottom-bar background, gradient border -->
                <Border Background="{DynamicResource Brush.Surface}"
                        BorderBrush="{StaticResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24,20"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Support Resources"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.TextPrimary}"
                                   Margin="0,0,0,12"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    Style="{StaticResource SupportResourceButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Click="OpenTicket_Click">
                                <TextBlock Text="Open Support Ticket"
                                           Foreground="{DynamicResource Brush.TextPrimary}"
                                           FontSize="14"
                                           TextDecorations="Underline"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Button>
                            <Button Grid.Column="2"
                                    Style="{StaticResource SupportResourceButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Click="HelpSupport_Click">
                                <TextBlock Text="Help &amp; Support Page"
                                           Foreground="{DynamicResource Brush.TextPrimary}"
                                           FontSize="14"
                                           TextDecorations="Underline"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Documentation: bottom-bar background, gradient border -->
                <Border Background="{DynamicResource Brush.Surface}"
                        BorderBrush="{StaticResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24,20">
                    <StackPanel>
                        <TextBlock Text="Documentation"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.TextPrimary}"
                                   Margin="0,0,0,16"/>
                        <!-- Row 1: Installation Setup & User Guide (extended card) -->
                        <Border Style="{StaticResource DocRowCardStyle}" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Installation Setup &amp; User Guide"
                                           Foreground="{DynamicResource Brush.TextPrimary}"
                                           FontSize="14"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"/>
                                <Button Grid.Column="1"
                                        Content="PDF"
                                        Style="{StaticResource DocButtonStyle}"
                                        VerticalAlignment="Center"
                                        Click="UserGuidePdf_Click"/>
                            </Grid>
                        </Border>
                        <!-- Row 2: FAQ / Knowledge Base (extended card) -->
                        <Border Style="{StaticResource DocRowCardStyle}" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="FAQ / Knowledge Base"
                                           Foreground="{DynamicResource Brush.TextPrimary}"
                                           FontSize="14"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"/>
                                <Button Grid.Column="1"
                                        Content="PDF"
                                        Style="{StaticResource DocButtonStyle}"
                                        VerticalAlignment="Center"
                                        Click="FaqPdf_Click"/>
                            </Grid>
                        </Border>
                        <!-- Row 3: User Guide Video (extended card) -->
                        <Border Style="{StaticResource DocRowCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="User Guide Video"
                                           Foreground="{DynamicResource Brush.TextPrimary}"
                                           FontSize="14"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"/>
                                <Button Grid.Column="1"
                                        Content="MP4"
                                        Style="{StaticResource DocButtonStyle}"
                                        VerticalAlignment="Center"
                                        IsEnabled="False"
                                        Opacity="0.5"
                                        ToolTip="Coming soon"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
