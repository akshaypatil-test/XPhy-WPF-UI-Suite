<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Light Theme Color Definitions -->
    <!-- These will be dynamically switched when theme changes -->
    
    <!-- Primary Brand Colors (same across themes) -->
    <Color x:Key="Color.Primary">#E2156B</Color>
    <Color x:Key="Color.PrimaryHover">#F0458A</Color>
    <Color x:Key="Color.Secondary">#1AB4CC</Color>
    <Color x:Key="Color.SecondaryHover">#0D7A8A</Color>
    
    <!-- Background Colors (Light Theme) - From screenshot -->
    <Color x:Key="Color.Background">#F0F4F8</Color>
    <Color x:Key="Color.Surface">#FFFFFF</Color>
    <Color x:Key="Color.SurfaceHover">#F5F5F5</Color>
    <Color x:Key="Color.Card">#FFFFFF</Color>
    
    <!-- Border Colors (Light Theme) -->
    <Color x:Key="Color.Border">#E0E0E0</Color>
    <Color x:Key="Color.BorderFocused">#E2156B</Color>
    
    <!-- Text Colors (Light Theme) - From screenshot -->
    <Color x:Key="Color.TextPrimary">#1A202C</Color>
    <Color x:Key="Color.TextSecondary">#718096</Color>
    
    <!-- State Colors (same across themes) -->
    <Color x:Key="Color.Success">#4CAF50</Color>
    <Color x:Key="Color.Warning">#FFA726</Color>
    <Color x:Key="Color.Error">#FF6B6B</Color>
    <Color x:Key="Color.Info">#29B6F6</Color>
    
    <!-- Disabled State (Light Theme) -->
    <Color x:Key="Color.Disabled">#CBD5E0</Color>
    <Color x:Key="Color.DisabledText">#A0AEC0</Color>
    
    <!-- Special Colors -->
    <Color x:Key="Color.CloseButtonHover">#E81123</Color>
    
</ResourceDictionary>
