<Window x:Class="x_phy_wpf_ui.LaunchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:controls="clr-namespace:x_phy_wpf_ui.Controls"
        Title="X-PHY Deepfake Detector" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#0F0F0F"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResize"
        MinHeight="500"
        MinWidth="700"
        SizeToContent="Manual">
    <WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="0"
            ResizeBorderThickness="6"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Background Image -->
        <Image x:Name="MainBgImage"
               Stretch="UniformToFill" 
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Grid.RowSpan="3"/>
        
        <!-- Window Controls -->
        <Grid Grid.Row="0" 
              HorizontalAlignment="Right" 
              VerticalAlignment="Top" 
              Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" Background="Transparent">
                <Button Content="âœ•" Width="40" Height="32" 
                        Background="Transparent"
                        Foreground="{StaticResource TextSecondary}"
                        BorderThickness="0"
                        Click="Close_Click"
                        Cursor="Hand"
                        FontSize="16"/>
            </StackPanel>
        </Grid>
        
        <!-- Component Container -->
        <ContentControl Grid.Row="1" 
                        x:Name="ComponentContainer"
                        VerticalContentAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"/>
        
        <!-- Version -->
        <TextBlock Grid.Row="2"
                   Text="Version: 1.0.10" 
                   FontSize="12" 
                   Foreground="{StaticResource TextSecondary}" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,24"/>
    </Grid>
</Window>
