<UserControl x:Class="x_phy_wpf_ui.Controls.SessionDetailsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">
    <UserControl.Resources>
        <!-- Theme-aware colors -->
        <SolidColorBrush x:Key="CardBg" Color="{DynamicResource Color.Card}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{DynamicResource Color.TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{DynamicResource Color.TextSecondary}"/>
        <SolidColorBrush x:Key="ResultRedBrush" Color="{DynamicResource Color.Error}"/>
        <SolidColorBrush x:Key="ResultGreenBrush" Color="{DynamicResource Color.Success}"/>
        <SolidColorBrush x:Key="OutcomePillBg" Color="{DynamicResource Color.Surface}"/>
        <SolidColorBrush x:Key="TealBrush" Color="{DynamicResource Color.Secondary}"/>
        <SolidColorBrush x:Key="PanelGlowBorder" Color="{DynamicResource Color.Secondary}"/>
        <!-- Cyan to transparent gradient (top to bottom), same as Profile page cards -->
        <LinearGradientBrush x:Key="CardBorderBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1AB4CC" Offset="0"/>
            <GradientStop Color="#801AB4CC" Offset="0.5"/>
            <GradientStop Color="Transparent" Offset="1"/>
        </LinearGradientBrush>
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.TextSecondary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>
    <StackPanel Margin="0,0,0,12">
        <Button x:Name="BackButton" Content="← Back" Style="{StaticResource BackButtonStyle}" Click="BackToResults_Click" Margin="0,0,0,12"/>
        <TextBlock Text="Session Details" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,18"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="280"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*" MinWidth="280"/>
            </Grid.ColumnDefinitions>
            <!-- Left: Detection Result -->
            <Border Grid.Column="0" Background="{StaticResource CardBg}" CornerRadius="10" BorderBrush="{StaticResource CardBorderBrush}" BorderThickness="1" Padding="22">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="{DynamicResource Brush.SecondaryHover}" CornerRadius="8" BorderBrush="{StaticResource PanelGlowBorder}" BorderThickness="1" Padding="18,14" Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Detection Result" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" x:Name="DetailConfidencePercent" FontSize="26" FontWeight="Bold" VerticalAlignment="Center"/>
                            </Grid>
                            <Border Grid.Row="1" x:Name="DetailOutcomePill" CornerRadius="12" Padding="12,6" HorizontalAlignment="Left" Margin="6,0,0,0" BorderThickness="2">
                                <TextBlock x:Name="DetailOutcomeText" FontSize="14" FontWeight="SemiBold"/>
                            </Border>
                        </Grid>
                    </Border>
                    <!-- Date & Time -->
                    <Border Grid.Row="1" Background="{DynamicResource Brush.Surface}" CornerRadius="8" Padding="14,11" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Date &amp; Time:" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="DetailDateAndTime" FontSize="13" Foreground="{StaticResource TealBrush}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <!-- Media Source -->
                    <Border Grid.Row="2" Background="{DynamicResource Brush.Surface}" CornerRadius="8" Padding="14,11" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Media Source:" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="DetailMediaSource" FontSize="13" Foreground="{StaticResource TealBrush}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <!-- Detection Type -->
                    <Border Grid.Row="3" Background="{DynamicResource Brush.Surface}" CornerRadius="8" Padding="14,11" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Detection Type:" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="DetailDetectionType" FontSize="13" Foreground="{StaticResource TealBrush}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <!-- Duration -->
                    <Border Grid.Row="4" Background="{DynamicResource Brush.Surface}" CornerRadius="8" Padding="14,11">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Duration:" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="DetailDuration" FontSize="13" Foreground="{StaticResource TealBrush}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            <!-- Right: Media Evidence -->
            <Border Grid.Column="2" Background="{StaticResource CardBg}" CornerRadius="10" BorderBrush="{StaticResource CardBorderBrush}" BorderThickness="1" Padding="22">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Evidence" FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>
                    <!--<TextBlock Grid.Row="1" Text="Original media used for analysis" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,14"/>-->
                    <!-- When no AI manipulation: show centered message -->
                    <Border Grid.Row="2" x:Name="MediaEvidenceNoManipulationPanel" Background="{DynamicResource Brush.Card}" CornerRadius="8" MinHeight="140" Visibility="Collapsed">
                        <TextBlock x:Name="MediaEvidenceNoManipulationText" Text="No AI Manipulation Found" FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource TealBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <!-- When audio: folder card opens result directory in Explorer (no outer border; inner border has cyan-to-transparent gradient) -->
                    <Border Grid.Row="2" x:Name="MediaEvidenceAudioPanel" Background="Transparent" CornerRadius="8" MinHeight="160"
                            BorderThickness="0" Visibility="Collapsed"
                            VerticalAlignment="Top" HorizontalAlignment="Stretch">
                        <Button x:Name="OpenMediaDirectoryButton" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="OpenMediaDirectory_Click"
                                VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="0" MinHeight="160">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Bd" Background="#1A232E" BorderBrush="{StaticResource CardBorderBrush}" BorderThickness="1" CornerRadius="8"
                                            MinWidth="220" MinHeight="140" Padding="24,20"
                                            VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Viewbox Width="48" Height="48" Margin="0,0,0,12">
                                                <Path Fill="#1AB4CC" Data="M10 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2h-8l-2-2z"/>
                                            </Viewbox>
                                            <TextBlock Text="Open Result Folder" FontSize="15" FontWeight="SemiBold" Foreground="#1AB4CC" HorizontalAlignment="Center" TextDecorations="Underline"/>
                                            <TextBlock Text="Opens the results in File Explorer" FontSize="12" Foreground="#A0AEC0" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#252E3D"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Border>
                    <!-- When AI manipulation detected: single-image carousel with smooth transition -->
                    <Grid Grid.Row="2" x:Name="MediaEvidenceImagesGrid" VerticalAlignment="Stretch" ClipToBounds="True">
                        <Grid.RowDefinitions>
                            <RowDefinition x:Name="MediaEvidenceImageRow" Height="*" MaxHeight="250"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" x:Name="MediaEvidenceTwoColumnGrid" ClipToBounds="True">
                            <Border Background="{DynamicResource Brush.Card}" CornerRadius="8" BorderThickness="0" ClipToBounds="True" MaxHeight="250">
                                <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                                    <Image x:Name="CarouselImage" Stretch="None" RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Viewbox>
                            </Border>
                            <Button x:Name="CarouselPrevButton" Width="36" Height="36" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0"
                                    Background="#80000000" Foreground="White" FontSize="18" Content="‹" Cursor="Hand" BorderThickness="0" Click="CarouselPrev_Click"
                                    Visibility="Collapsed">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="18" Padding="0">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#B0000000"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="CarouselNextButton" Width="36" Height="36" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0"
                                    Background="#80000000" Foreground="White" FontSize="18" Content="›" Cursor="Hand" BorderThickness="0" Click="CarouselNext_Click"
                                    Visibility="Collapsed">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="18" Padding="0">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#B0000000"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                        <TextBlock Grid.Row="1" x:Name="CarouselCounterText" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,12,0,0" Visibility="Collapsed"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </StackPanel>
</UserControl>
