<UserControl x:Class="x_phy_wpf_ui.Controls.ForgotUsernameSuccessComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000">
    <UserControl.Resources>
        <Style x:Key="SignInButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Brush.Primary}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.White}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="32,14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Brush.PrimaryHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Background="Transparent">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Width="420" Margin="70,0,0,0">
            <TextBlock Text="Confirmation sent" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource Brush.TextPrimary}"
                       TextAlignment="Center" Margin="0,0,0,24"/>
            <TextBlock Text="If An Account Exists For The Email Address Provided,&#x0a;You Will Receive A Confirmation Email Shortly.&#x0a;Please Check Your Inbox."
                       TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,8" Foreground="{DynamicResource Brush.TextPrimary}" FontSize="14"/>
            <Button Content="Back to Sign In" Style="{StaticResource SignInButtonStyle}" Click="BackToSignIn_Click"
                    HorizontalAlignment="Center" Margin="0,32,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
