<UserControl x:Class="x_phy_wpf_ui.Controls.DetectionResultsComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="700">
    <UserControl.Resources>
        <SolidColorBrush x:Key="PrimaryPink" Color="#E2156B"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF" Opacity="0.08"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#999999"/>
        <SolidColorBrush x:Key="AnalyzingColor" Color="#F0C674"/>
        <SolidColorBrush x:Key="RealColor" Color="#22C55E"/>
        <SolidColorBrush x:Key="FakeColor" Color="#E2156B"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#999999"/>
        <SolidColorBrush x:Key="HoverBackground" Color="#2A2A2A"/>
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBackground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- During detection: image + live percentage -->
        <Border Grid.Row="0" x:Name="DuringDetectionPanel" Background="{StaticResource CardBackground}"
                CornerRadius="8" Padding="10" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Background="#1A1A1A" CornerRadius="6" Width="88" Height="88" Margin="0,0,14,0">
                    <Image x:Name="DetectionLiveImage" Source="pack://application:,,,/face.png" Stretch="Uniform" Opacity="0.9"/>
                </Border>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="FakeProgressPercentText" Text="Analyzing... 0%"
                               FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource PrimaryPink}"/>
                    <TextBlock x:Name="DuringDetectionSubtext" Text="Detection in progress (60s)" FontSize="12"
                               Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Overall Classification Indicator -->
        <Border Grid.Row="1"
                Background="{StaticResource CardBackground}"
                CornerRadius="8"
                Padding="12"
                Margin="0,0,0,10"
                x:Name="ClassificationIndicator">
            <StackPanel HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                    <TextBlock x:Name="ClassificationIcon" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="ClassificationText" FontSize="16" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimary}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="ClassificationPercentage" FontSize="14" Foreground="{StaticResource PrimaryPink}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock x:Name="ClassificationSubtext" FontSize="12" Foreground="{StaticResource TextSecondary}"
                           HorizontalAlignment="Center" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Statistics Cards -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="{StaticResource CardBackground}" CornerRadius="8" Padding="12" Margin="0,0,6,0">
                <StackPanel>
                    <TextBlock Text="Total Faces" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                    <TextBlock x:Name="TotalFacesText" Text="0" FontSize="18" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryPink}" Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Background="{StaticResource CardBackground}" CornerRadius="8" Padding="12" Margin="3,0,3,0">
                <StackPanel>
                    <TextBlock Text="Fake Detected" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                    <TextBlock x:Name="FakeFacesText" Text="0" FontSize="18" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryPink}" Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="2" Background="{StaticResource CardBackground}" CornerRadius="8" Padding="12" Margin="6,0,0,0">
                <StackPanel>
                    <TextBlock Text="Avg Fake %" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                    <TextBlock x:Name="AvgFakePercentText" Text="0%" FontSize="18" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryPink}" Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Face list -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="FacesItemsControl" Margin="0,0,0,8">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource CardBackground}" CornerRadius="6" Padding="10,8" Margin="4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding StatusText}" FontSize="12" FontWeight="Bold"
                                           Foreground="{Binding StatusColor}" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding PercentageText}" FontSize="12"
                                           Foreground="{StaticResource TextSecondary}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Stop Button -->
        <StackPanel Grid.Row="4" HorizontalAlignment="Center" Margin="0,10,0,0" x:Name="StopButtonPanel">
            <Button Content="Stop Detection" Style="{StaticResource SecondaryButtonStyle}"
                    Click="StopButton_Click" x:Name="StopButtonAlways" Width="180" IsEnabled="True"/>
        </StackPanel>

        <!-- Back Button -->
        <StackPanel Grid.Row="4" HorizontalAlignment="Center" Margin="0,10,0,0" x:Name="BackButtonPanel"
                    Visibility="Collapsed">
            <Button Content="Back to Home" Style="{StaticResource SecondaryButtonStyle}"
                    Click="BackButton_Click" x:Name="BackButton" Width="200" IsEnabled="True"/>
        </StackPanel>
    </Grid>
</UserControl>
