<UserControl x:Class="x_phy_wpf_ui.Controls.DetectionResultsScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">
    <UserControl.Resources>
        <!-- Using theme-aware brushes -->
        <SolidColorBrush x:Key="CardBg" Color="{DynamicResource Color.Card}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{DynamicResource Color.TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{DynamicResource Color.TextSecondary}"/>
        <SolidColorBrush x:Key="PrimaryPinkBrush" Color="{DynamicResource Color.Primary}"/>
        <SolidColorBrush x:Key="ResultRedBrush" Color="{DynamicResource Color.Error}"/>
        <SolidColorBrush x:Key="ResultGreenBrush" Color="{DynamicResource Color.Success}"/>
        <SolidColorBrush x:Key="TealBrush" Color="{DynamicResource Color.Secondary}"/>
        <SolidColorBrush x:Key="TypePillBg" Color="{DynamicResource Color.Surface}"/>
        <Style x:Key="TealButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Brush.Surface}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Brush.ResultsRowHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="PinkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Brush.Primary}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.White}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Brush.PrimaryHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <SolidColorBrush x:Key="PanelBorder" Color="{DynamicResource Color.Border}"/>
        <SolidColorBrush x:Key="PanelGlowBorder" Color="{DynamicResource Color.Secondary}"/>
        <SolidColorBrush x:Key="FieldBlockBg" Color="{DynamicResource Color.Surface}"/>
        <SolidColorBrush x:Key="MetadataRowBg" Color="{DynamicResource Color.Card}"/>
        <SolidColorBrush x:Key="MetadataLabelBrush" Color="{DynamicResource Color.TextPrimary}"/>
        <!-- Row hover uses Brush.ResultsRowHover (theme-aware; slightly darker in light mode so hover is visible, dark in dark mode) -->
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- List view: DETECTION RESULTS table (scrollable; buttons are in row below) -->
        <ScrollViewer x:Name="ResultsListView" Grid.Row="0" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" PreviewMouseWheel="ResultsListView_PreviewMouseWheel" FocusVisualStyle="{x:Null}">
            <Grid Margin="0,0,0,0" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- Title and Legend -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="DETECTION RESULTS"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse Width="10" Height="10" Fill="{StaticResource ResultRedBrush}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="AI Manipulation Detected" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,20,0" VerticalAlignment="Center"/>
                        <Ellipse Width="10" Height="10" Fill="{StaticResource ResultGreenBrush}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="No AI Manipulation Detected" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Results area: table when items exist, or "No results to show" when empty -->
                <Grid Grid.Row="1" MinHeight="200" Margin="0,0,0,0">
                    <!-- Empty state: centered message -->
                    <Border x:Name="NoResultsPanel" Visibility="Collapsed"
                            VerticalAlignment="Center" HorizontalAlignment="Center"
                            CornerRadius="8" Padding="24,20" Background="{DynamicResource Brush.Surface}"
                            BorderBrush="{StaticResource PanelBorder}" BorderThickness="1">
                        <TextBlock Text="No results to show" FontSize="15" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </Border>
                    <!-- Results Table: cyan top border + glass look -->
                    <Border x:Name="ResultsTablePanel" CornerRadius="8" Margin="0,0,0,0" BorderBrush="{StaticResource PanelGlowBorder}" BorderThickness="0,1,0,0" HorizontalAlignment="Stretch" Focusable="False">
                    <Border CornerRadius="8" Padding="0" UseLayoutRounding="True" Focusable="False">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#1AFFFFFF" Offset="0"/>
                                <GradientStop Color="#0CFFFFFF" Offset="0.5"/>
                                <GradientStop Color="#08FFFFFF" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#1AB4CC" BlurRadius="8" ShadowDepth="0" Opacity="0.15"/>
                        </Border.Effect>
                    <DataGrid x:Name="ResultsDataGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserResizeColumns="True"
                              CanUserResizeRows="False"
                              CanUserSortColumns="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              RowBackground="{DynamicResource Brush.Card}"
                              AlternatingRowBackground="{DynamicResource Brush.Card}"
                              BorderThickness="0"
                              Background="Transparent"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              RowHeight="44"
                              FontSize="13"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              UseLayoutRounding="True"
                              HorizontalAlignment="Stretch"
                              FocusVisualStyle="{x:Null}"
                              PreviewMouseDown="ResultsDataGrid_PreviewMouseDown"
                              MouseDown="ResultsDataGrid_MouseDown">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{DynamicResource Brush.Surface}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="12,14,24,14"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridColumnHeader">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderThickness="0,0,0,1"
                                                    BorderBrush="{DynamicResource Brush.Border}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="{DynamicResource Brush.Card}"/>
                                <Setter Property="MinHeight" Value="44"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridRow">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderThickness="0,0,0,1"
                                                    BorderBrush="{DynamicResource Brush.Border}">
                                                <SelectiveScrollingGrid>
                                                    <SelectiveScrollingGrid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </SelectiveScrollingGrid.ColumnDefinitions>
                                                    <DataGridCellsPresenter Grid.Column="0"
                                                                           ItemsPanel="{TemplateBinding ItemsPanel}"
                                                                           SelectiveScrollingGrid.SelectiveScrollingOrientation="Horizontal"/>
                                                    <DataGridRowHeader Grid.Column="1"
                                                                       SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical"
                                                                       Visibility="Collapsed"/>
                                                </SelectiveScrollingGrid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource Brush.ResultsRowHover}"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource Brush.Card}"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="12,10,24,10"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderThickness="0"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding TimestampDisplay}" Width="1.2*" MinWidth="120" CanUserSort="True">
                                <DataGridTextColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Timestamp" VerticalAlignment="Center"/>
                                        <TextBlock Text="▼" FontSize="9" VerticalAlignment="Center" Margin="4,0,0,0" Opacity="0.9"/>
                                    </StackPanel>
                                </DataGridTextColumn.Header>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="Type" Width="0.5*" MinWidth="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource TypePillBg}" CornerRadius="14" Padding="8,3" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Type}" Foreground="{StaticResource TextPrimaryBrush}" FontSize="12"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Result" Width="2*" MinWidth="160">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ResultText}" HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsAiManipulationDetected}" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource ResultRedBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsAiManipulationDetected}" Value="False">
                                                            <Setter Property="Foreground" Value="{StaticResource ResultGreenBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Detection Confidence" Width="1.5*" MinWidth="180">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ConfidenceText}" HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsAiManipulationDetected}" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource ResultRedBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsAiManipulationDetected}" Value="False">
                                                            <Setter Property="Foreground" Value="{StaticResource ResultGreenBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Actions" Width="0.6*" MinWidth="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                FontSize="12"
                                                Padding="0"
                                                HorizontalAlignment="Center"
                                                FocusVisualStyle="{x:Null}"
                                                Click="ViewResult_Click">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <TextBlock Text="View Result"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       TextDecorations="Underline"/>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    </Border>
                </Border>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- Buttons row with popup overlay (toast shown over the two buttons) -->
        <Grid x:Name="ResultsButtonsPanel" Grid.Row="1" Margin="0,16,0,0">
            <!-- Buttons layer -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ResultsDirectoryButton"
                        Content="Results Directory"
                        Style="{StaticResource TealButtonStyle}"
                        Click="ResultsDirectory_Click"
                        Margin="0,0,12,0"/>
                <Button x:Name="ExportExcelButton"
                        Content="Export to Excel"
                        Style="{StaticResource PinkButtonStyle}"
                        Click="ExportExcel_Click"/>
            </StackPanel>
            <!-- In-page export toast: overlays on top of the two buttons (same area, right-aligned) -->
            <Border x:Name="ExportToastCard" Visibility="Collapsed" CornerRadius="10" Padding="16,12" MinWidth="340"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,0"
                    Background="{DynamicResource Brush.Surface}" BorderBrush="{DynamicResource Brush.Secondary}" BorderThickness="1"
                    Panel.ZIndex="1">
                <Border.Effect>
                    <DropShadowEffect Color="#1AB4CC" BlurRadius="8" ShadowDepth="0" Opacity="0.2"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <TextBlock x:Name="ExportToastTitle" Text="Export Started" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource Brush.TextPrimary}" Margin="0,0,0,4"/>
                        <TextBlock x:Name="ExportToastMessage" Text="Detection Results Are Being Exported To Excel." FontSize="12" Foreground="{DynamicResource Brush.TextSecondary}" TextWrapping="Wrap"/>
                    </StackPanel>
                    <Button Grid.Column="1" Content="✕" FontSize="12" Foreground="{DynamicResource Brush.TextSecondary}" Background="Transparent" BorderThickness="0" Cursor="Hand" Padding="8,0" VerticalAlignment="Top" Click="ExportToastClose_Click"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Detail view: Session Details (replaces list when View Result is clicked). Panel is created in code-behind to avoid XAML type resolution issues. -->
        <ScrollViewer x:Name="SessionDetailView" Grid.Row="0" Visibility="Collapsed" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
            <ContentControl x:Name="SessionDetailPanelHost"/>
        </ScrollViewer>
    </Grid>
</UserControl>
