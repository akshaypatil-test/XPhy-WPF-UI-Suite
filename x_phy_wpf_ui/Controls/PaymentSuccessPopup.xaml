<UserControl x:Class="x_phy_wpf_ui.Controls.PaymentSuccessPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="480">
    <UserControl.Resources>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Brush.Primary}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.White}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Brush.PrimaryHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <!-- Success Icon -->
        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
            <Ellipse Width="72" Height="72" Fill="{DynamicResource Brush.Primary}">
                <Ellipse.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#E2156B"/>
                </Ellipse.Effect>
            </Ellipse>
            <TextBlock Text="âœ“" FontSize="42" FontWeight="Bold"
                       Foreground="{DynamicResource Brush.White}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Margin="0,-56,0,0"/>
        </StackPanel>

        <TextBlock Text="Payment Successful!"
                   FontSize="22" FontWeight="Bold"
                   Foreground="{DynamicResource Brush.TextPrimary}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,6"/>

        <TextBlock Text="Your license has been activated successfully."
                   FontSize="13"
                   Foreground="{DynamicResource Brush.TextSecondary}"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap" TextAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Payment Details: theme-aware panel (Surface + Border) -->
        <Border BorderBrush="{DynamicResource Brush.Border}" BorderThickness="1" CornerRadius="8"
                Padding="24,18" Background="{DynamicResource Brush.Surface}" Margin="0,0,0,24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Plan:" FontWeight="SemiBold"
                           Foreground="{DynamicResource Brush.TextPrimary}" FontSize="13" Margin="0,0,24,12"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="PlanNameText" Text="Monthly"
                           Foreground="{DynamicResource Brush.TextSecondary}" FontSize="13" Margin="0,0,0,12"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Duration:" FontWeight="SemiBold"
                           Foreground="{DynamicResource Brush.TextPrimary}" FontSize="13" Margin="0,0,24,12"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DurationText" Text="30 days"
                           Foreground="{DynamicResource Brush.TextSecondary}" FontSize="13" Margin="0,0,0,12"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Amount:" FontWeight="SemiBold"
                           Foreground="{DynamicResource Brush.TextPrimary}" FontSize="13" Margin="0,0,24,12"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="AmountText" Text="$9.99"
                           Foreground="{DynamicResource Brush.TextSecondary}" FontSize="13" Margin="0,0,0,12"/>
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Transaction ID:" FontWeight="SemiBold"
                           Foreground="{DynamicResource Brush.TextPrimary}" FontSize="13" Margin="0,0,24,0"/>
                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TransactionIdText" Text=""
                           Foreground="{DynamicResource Brush.TextSecondary}" FontSize="13" TextWrapping="Wrap"/>
            </Grid>
        </Border>

        <Button Content="Close" Width="200" Height="44" HorizontalAlignment="Center"
                Style="{StaticResource PrimaryButtonStyle}" Click="Close_Click"/>
    </StackPanel>
</UserControl>
