<UserControl x:Class="x_phy_wpf_ui.Controls.StripePaymentComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        <!-- Theme-aware: use app brushes so Light/Dark match rest of app -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Brush.SurfaceHover}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Brush.Border}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="480"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Back Button -->
        <Button Grid.Row="0"
                Content="â† Back to Plans"
                Style="{StaticResource BackButtonStyle}"
                Click="BackButton_Click"
                Margin="0,0,0,8"
                HorizontalAlignment="Left"/>

        <!-- Header -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="Complete Your Payment"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="{DynamicResource Brush.TextPrimary}"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Securely Complete Your Subscription Purchase."
                          FontSize="14"
                          Foreground="{DynamicResource Brush.TextSecondary}"
                          HorizontalAlignment="Center"
                          Margin="0,6,0,0"/>
            </StackPanel>
        </Grid>

        <!-- WebView2: no wrapper background, just the Stripe form -->
        <Border Grid.Row="2" 
                Background="Transparent"
                Margin="0,0,0,16">
            <wv2:WebView2 x:Name="StripeWebView" 
                         Source="about:blank"/>
        </Border>

        <!-- Loading/Error Messages -->
        <StackPanel Grid.Row="3">
            <TextBlock x:Name="StatusText"
                      FontSize="13"
                      Foreground="{DynamicResource Brush.TextSecondary}"
                      TextAlignment="Center"
                      TextWrapping="Wrap"
                      Margin="0,0,0,16"
                      Text="Loading secure payment form..."/>

            <TextBlock x:Name="ErrorMessageText"
                      FontSize="13"
                      Foreground="{DynamicResource Brush.Error}"
                      TextWrapping="Wrap"
                      TextAlignment="Center"
                      Margin="0,0,0,16"
                      Visibility="Collapsed"/>

            <TextBlock FontSize="11"
                      Foreground="{DynamicResource Brush.TextSecondary}"
                      TextAlignment="Center"
                      TextWrapping="Wrap">
                <Run Text="ðŸ”’ Secured by Stripe"/>
                <LineBreak/>
                <Run Text="Your card details are encrypted and never stored"/>
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
