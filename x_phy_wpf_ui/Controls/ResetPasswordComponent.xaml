<UserControl x:Class="x_phy_wpf_ui.Controls.ResetPasswordComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000">
    <UserControl.Resources>
        <SolidColorBrush x:Key="PrimaryPink" Color="#E2156B"/>
        <SolidColorBrush x:Key="PrimaryPinkHover" Color="#F0458A"/>
        <SolidColorBrush x:Key="DarkBackground" Color="#0F0F0F"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="InputBackground" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="InputBorder" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="InputBorderFocused" Color="#E2156B"/>
        <SolidColorBrush x:Key="ErrorText" Color="#FF6B6B"/>
        <SolidColorBrush x:Key="BackButtonBorder" Color="#1AB4CC"/>
        <SolidColorBrush x:Key="DarkTealBackground" Color="#0D2830"/>
        <SolidColorBrush x:Key="DarkTealBackgroundHover" Color="#152E33"/>
        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="{StaticResource InputBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center" Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource InputBorderFocused}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LaunchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryPink}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryPinkHover}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#555555"/>
                    <Setter Property="Foreground" Value="#999999"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DarkTealBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BackButtonBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkTealBackgroundHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Background="Transparent">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Width="400" Margin="50,40,50,50">
                <TextBlock Text="Reset Password" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"
                           TextAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Enter your new password below." FontSize="14" Foreground="{StaticResource TextSecondary}"
                           TextAlignment="Center" Margin="0,0,0,32"/>

                <TextBlock x:Name="ErrorMessageText" Text="" FontSize="12" Foreground="{StaticResource ErrorText}"
                           TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,16" Visibility="Collapsed"/>

                <TextBlock Text="New Password" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,8"/>
                <PasswordBox x:Name="NewPasswordBox" Style="{StaticResource ModernPasswordBoxStyle}"
                             PasswordChanged="Password_Changed" Margin="0,0,0,16"/>
                <TextBlock x:Name="NewPasswordErrorText" Text="" FontSize="11" Foreground="{StaticResource ErrorText}"
                           Margin="4,0,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>

                <TextBlock Text="Confirm Password" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,8"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Style="{StaticResource ModernPasswordBoxStyle}"
                             PasswordChanged="Password_Changed" Margin="0,0,0,0"/>
                <TextBlock x:Name="ConfirmPasswordErrorText" Text="" FontSize="11" Foreground="{StaticResource ErrorText}"
                           Margin="4,0,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>

                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="SubmitButton" Grid.Column="0" Content="Reset Password"
                            Style="{StaticResource LaunchButtonStyle}" Click="Submit_Click" IsEnabled="False"/>
                    <Button Grid.Column="2" Content="Back" Style="{StaticResource BackButtonStyle}" Click="Back_Click"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
