<Window x:Class="x_phy_wpf_ui.StripePaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:shell="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:controls="clr-namespace:x_phy_wpf_ui.Controls"
        Title="Stripe Payment"
        Height="783"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="#000000"
        ResizeMode="CanResize"
        MinHeight="500"
        MinWidth="700"
        SizeToContent="Manual">
    <WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="0"
            ResizeBorderThickness="6"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundColor" Color="#000000"/>
        <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#999999"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#EF4444"/>
        <SolidColorBrush x:Key="HoverBackground" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="CloseButtonHover" Color="#E81123"/>
        <Style x:Key="WindowChromeButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBackground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="WindowCloseButton" TargetType="Button" BasedOn="{StaticResource WindowChromeButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource CloseButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Top Header with Logo and Window Controls -->
        <Grid Grid.Row="0" Margin="16,17,16,0" Height="32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Logo -->
            <Image Grid.Column="0" 
                   Source="/x-phy.png" 
                   Width="57" 
                   Height="32" 
                   Stretch="Uniform"
                   VerticalAlignment="Center"/>
            
            <!-- Window Controls -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ðŸ—•" Width="16" Height="16" 
                        Style="{StaticResource WindowChromeButton}"
                        Click="Minimize_Click"
                        Margin="0,0,4,0"/>
                <Button Content="âœ•" Width="16" Height="16" 
                        Style="{StaticResource WindowCloseButton}"
                        Click="Close_Click"/>
            </StackPanel>
        </Grid>
        
        <!-- Top Navigation Bar -->
        <Grid Grid.Row="1" Margin="0,15,0,15" Height="76">
            <controls:TopNavigationBar x:Name="TopNavBar"
                                       SelectedPage="Settings"
                                       NavigationClicked="TopNavBar_NavigationClicked"/>
        </Grid>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Complete Your Payment"
                              FontSize="24"
                              FontWeight="Bold"
                              Foreground="{StaticResource TextColor}"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Securely Complete Your Subscription Purchase."
                              FontSize="14"
                              Foreground="{StaticResource SecondaryTextColor}"
                              HorizontalAlignment="Center"
                              Margin="0,8,0,0"/>
                    <TextBlock x:Name="PlanDetailsText"
                              FontSize="14"
                              Foreground="{StaticResource SecondaryTextColor}"
                              HorizontalAlignment="Center"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>

            <!-- WebView2 Container -->
            <Border Grid.Row="1" 
                    Background="White"
                    CornerRadius="8"
                    Margin="0,0,0,20">
                <!-- Source is set dynamically in code-behind after injecting payment details -->
                <wv2:WebView2 x:Name="StripeWebView" 
                             Source="about:blank"/>
            </Border>

            <!-- Loading/Error Messages -->
            <StackPanel Grid.Row="2">
                <TextBlock x:Name="StatusText"
                          FontSize="13"
                          Foreground="{StaticResource SecondaryTextColor}"
                          TextAlignment="Center"
                          TextWrapping="Wrap"
                          Margin="0,0,0,16"
                          Text="Loading secure payment form..."/>

                <TextBlock x:Name="ErrorMessageText"
                          FontSize="13"
                          Foreground="{StaticResource ErrorColor}"
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          Margin="0,0,0,16"
                          Visibility="Collapsed"/>

                <TextBlock FontSize="11"
                          Foreground="{StaticResource SecondaryTextColor}"
                          TextAlignment="Center"
                          TextWrapping="Wrap">
                    <Run Text="ðŸ”’ Secured by Stripe"/>
                    <LineBreak/>
                    <Run Text="Your card details are encrypted and never stored"/>
                </TextBlock>
            </StackPanel>
        </Grid>
        
        <!-- Footer -->
        <Grid Grid.Row="3" Margin="30,0,30,20" Height="60">
            <controls:BottomBar x:Name="BottomBar"
                               Status="Processing"
                               RemainingDays="0"
                               ShowSubscribeButton="False"
                               SubscribeClicked="BottomBar_SubscribeClicked"
                               SupportClicked="BottomBar_SupportClicked"
                               LogoutClicked="BottomBar_LogoutClicked"/>
        </Grid>
    </Grid>
</Window>
