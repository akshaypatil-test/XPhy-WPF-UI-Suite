<Window x:Class="x_phy_wpf_ui.PaymentSuccessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        mc:Ignorable="d"
        Title="Payment Successful"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="#000000"
        ResizeMode="CanResize"
        MinHeight="500"
        MinWidth="700"
        SizeToContent="Manual">
    <WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="0"
            ResizeBorderThickness="6"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundColor" Color="#000000"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#999999"/>
        <SolidColorBrush x:Key="BorderColor" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#E2156B"/>
        <SolidColorBrush x:Key="HoverBackground" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="CloseButtonHover" Color="#E81123"/>
        <Style x:Key="WindowChromeButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBackground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="WindowCloseButton" TargetType="Button" BasedOn="{StaticResource WindowChromeButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource CloseButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="40,14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Success Icon -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceColor}" Padding="40,50">
            <StackPanel HorizontalAlignment="Center">
                <Ellipse Width="100" Height="100" Fill="{StaticResource PrimaryColor}">
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="#E2156B"/>
                    </Ellipse.Effect>
                </Ellipse>
                <TextBlock Text="âœ“" FontSize="60" FontWeight="Bold" 
                          Foreground="{StaticResource TextColor}" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          Margin="0,-80,0,0"/>
            </StackPanel>
        </Border>

        <!-- Success Details -->
        <StackPanel Grid.Row="1" Margin="40,40,40,20" VerticalAlignment="Center">
            <TextBlock Text="Payment Successful!" 
                      FontSize="32" 
                      FontWeight="Bold" 
                      Foreground="{StaticResource TextColor}"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,16"/>
            
            <TextBlock Text="Your license has been activated successfully." 
                      FontSize="16" 
                      Foreground="{StaticResource SecondaryTextColor}"
                      HorizontalAlignment="Center"
                      TextWrapping="Wrap"
                      TextAlignment="Center"
                      Margin="0,0,0,40"/>

            <!-- Payment Details -->
            <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="8" Padding="30" Background="{StaticResource SurfaceColor}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Plan:" FontWeight="SemiBold" Foreground="{StaticResource TextColor}" FontSize="14" Margin="0,0,30,16"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="PlanNameText" Text="Monthly" Foreground="{StaticResource SecondaryTextColor}" FontSize="14" Margin="0,0,0,16"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Duration:" FontWeight="SemiBold" Foreground="{StaticResource TextColor}" FontSize="14" Margin="0,0,30,16"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DurationText" Text="30 days" Foreground="{StaticResource SecondaryTextColor}" FontSize="14" Margin="0,0,0,16"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Amount:" FontWeight="SemiBold" Foreground="{StaticResource TextColor}" FontSize="14" Margin="0,0,30,16"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="AmountText" Text="$9.99" Foreground="{StaticResource SecondaryTextColor}" FontSize="14" Margin="0,0,0,16"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Transaction ID:" FontWeight="SemiBold" Foreground="{StaticResource TextColor}" FontSize="14" Margin="0,0,30,0"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TransactionIdText" Text="" Foreground="{StaticResource SecondaryTextColor}" FontSize="14" TextWrapping="Wrap"/>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="2" 
                Content="Close" 
                Width="200" 
                Height="45"
                Margin="0,0,0,40"
                HorizontalAlignment="Center"
                Style="{StaticResource PrimaryButtonStyle}"
                Click="Close_Click"/>
        
        <!-- Window Controls -->
        <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0" ZIndex="1000">
            <StackPanel Orientation="Horizontal" Background="Transparent">
                <Button Content="ðŸ—•" Width="46" Height="32" 
                        Style="{StaticResource WindowChromeButton}"
                        Click="Minimize_Click"/>
                <Button Content="ðŸ—–" Width="46" Height="32" 
                        Style="{StaticResource WindowChromeButton}"
                        Click="Maximize_Click"/>
                <Button Content="âœ•" Width="46" Height="32" 
                        Style="{StaticResource WindowCloseButton}"
                        Click="Close_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
