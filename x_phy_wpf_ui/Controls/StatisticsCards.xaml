<UserControl x:Class="x_phy_wpf_ui.Controls.StatisticsCards"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="76.583" d:DesignWidth="945.516">
    <UserControl.Resources>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF" Opacity="0.08"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#999999"/>
        <SolidColorBrush x:Key="PrimaryPink" Color="#E2156B"/>
        <SolidColorBrush x:Key="ValueAccentBrush" Color="#1AB4CC"/>
        <!-- Card border: pink/magenta top-left to cyan bottom-right (glass-like) -->
        <LinearGradientBrush x:Key="NavBarBorderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E2156B" Offset="0"/>
            <GradientStop Color="#B01050" Offset="0.35"/>
            <GradientStop Color="#1AB4CC" Offset="1"/>
        </LinearGradientBrush>
        <!-- Subtle glow for glass card effect -->
        <DropShadowEffect x:Key="CardGlassGlow" BlurRadius="10" ShadowDepth="0" Opacity="0.35" Color="#1AB4CC"/>
        <!-- Glass ellipse: dark reddish-purple radial gradient -->
        <RadialGradientBrush x:Key="KpiEllipseGlassBg" GradientOrigin="0.3,0.3" Center="0.5,0.5" RadiusX="0.6" RadiusY="0.6">
            <GradientStop Color="#5A2D4A" Offset="0"/>
            <GradientStop Color="#3D2038" Offset="0.5"/>
            <GradientStop Color="#2D1B2E" Offset="1"/>
        </RadialGradientBrush>
        <!-- Glass ellipse: glossy border (highlight top-left, softer bottom-right) -->
        <LinearGradientBrush x:Key="KpiEllipseGlassBorder" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#80FFFFFF" Offset="0"/>
            <GradientStop Color="#40FFFFFF" Offset="0.4"/>
            <GradientStop Color="#15FFFFFF" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Total Detections Card -->
        <Border Grid.Column="0" 
                Background="{StaticResource CardBackground}" 
                CornerRadius="20"
                BorderBrush="{StaticResource NavBarBorderGradient}"
                BorderThickness="1"
                Effect="{StaticResource CardGlassGlow}"
                Padding="12,10,12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Width="16" Height="16" Margin="0,0,8,0" VerticalAlignment="Center">
                    <Ellipse Fill="{StaticResource KpiEllipseGlassBg}"/>
                    <Ellipse Fill="{StaticResource PrimaryPink}" Opacity="0.12"/>
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/kpi-logo.png" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Ellipse Fill="Transparent" Stroke="{StaticResource KpiEllipseGlassBorder}" StrokeThickness="1"/>
                </Grid>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Total Detections" 
                               FontSize="11" 
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,0,0,3"/>
                    <TextBlock x:Name="TotalDetectionsText" 
                               Text="0" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource ValueAccentBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Total Deepfakes Card -->
        <Border Grid.Column="2" 
                Background="{StaticResource CardBackground}" 
                CornerRadius="20"
                BorderBrush="{StaticResource NavBarBorderGradient}"
                BorderThickness="1"
                Effect="{StaticResource CardGlassGlow}"
                Padding="12,10,12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Width="16" Height="16" Margin="0,0,8,0" VerticalAlignment="Center">
                    <Ellipse Fill="{StaticResource KpiEllipseGlassBg}"/>
                    <Ellipse Fill="{StaticResource PrimaryPink}" Opacity="0.12"/>
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/kpi-logo.png" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Ellipse Fill="Transparent" Stroke="{StaticResource KpiEllipseGlassBorder}" StrokeThickness="1"/>
                </Grid>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Total Deepfakes" 
                               FontSize="11" 
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,0,0,3"/>
                    <TextBlock x:Name="TotalDeepfakesText" 
                               Text="0" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource ValueAccentBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Total Analysis Time Card -->
        <Border Grid.Column="4" 
                Background="{StaticResource CardBackground}" 
                CornerRadius="20"
                BorderBrush="{StaticResource NavBarBorderGradient}"
                BorderThickness="1"
                Effect="{StaticResource CardGlassGlow}"
                Padding="12,10,12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Width="16" Height="16" Margin="0,0,8,0" VerticalAlignment="Center">
                    <Ellipse Fill="{StaticResource KpiEllipseGlassBg}"/>
                    <Ellipse Fill="{StaticResource PrimaryPink}" Opacity="0.12"/>
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/kpi-logo.png" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Ellipse Fill="Transparent" Stroke="{StaticResource KpiEllipseGlassBorder}" StrokeThickness="1"/>
                </Grid>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Total Analysis Time" 
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,0,0,3" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="11"/>
                    <TextBlock x:Name="TotalAnalysisTimeText" 
                               Text="0h" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource ValueAccentBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Last Detection Card -->
        <Border Grid.Column="6" 
                Background="{StaticResource CardBackground}" 
                CornerRadius="20"
                BorderBrush="{StaticResource NavBarBorderGradient}"
                BorderThickness="1"
                Effect="{StaticResource CardGlassGlow}"
                Padding="12,10,12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Width="16" Height="16" Margin="0,0,8,0" VerticalAlignment="Center">
                    <Ellipse Fill="{StaticResource KpiEllipseGlassBg}"/>
                    <Ellipse Fill="{StaticResource PrimaryPink}" Opacity="0.12"/>
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/kpi-logo.png" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Ellipse Fill="Transparent" Stroke="{StaticResource KpiEllipseGlassBorder}" StrokeThickness="1"/>
                </Grid>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Last Detection" 
                               FontSize="11" 
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,0,0,3" TextWrapping="Wrap"/>
                    <TextBlock x:Name="LastDetectionText" 
                               Text="Never" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource ValueAccentBrush}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
