<UserControl x:Class="x_phy_wpf_ui.Controls.LaunchComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <UserControl.Resources>
        <SolidColorBrush x:Key="PrimaryPink" Color="#E2156B"/>
        <SolidColorBrush x:Key="PrimaryPinkHover" Color="#F0458A"/>
        <SolidColorBrush x:Key="TealColor" Color="#1AB4CC"/>
        <SolidColorBrush x:Key="DarkTealBackground" Color="#0D2830"/>
        <SolidColorBrush x:Key="DarkTealBackgroundHover" Color="#152E33"/>
        <SolidColorBrush x:Key="DarkBackground" Color="#0F0F0F"/>
        <SolidColorBrush x:Key="CardBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#B0B0B0"/>
        
        <!-- Primary Button Style (Sign In) -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryPink}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="40,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryPinkHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Secondary Button Style (Create Account) - dark teal tint bg, teal border -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DarkTealBackground}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="40,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource TealColor}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkTealBackgroundHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent">
        <!-- Main Content - Centered -->
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Left" Width="500">
            
            <!-- Title -->
            <TextBlock Text="Get Started" 
                       FontSize="36" 
                       Foreground="{StaticResource TextPrimary}"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16" FontWeight="Bold"/>
            
            <!-- Subtitle -->
            <TextBlock Text="Choose How You Want To Access" 
                       FontSize="16" 
                       Foreground="{StaticResource TextSecondary}"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,24"/>
            
            <!-- Buttons - Fixed width 140 each -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,24">
                <Button Content="Sign In" Width="140"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="SignIn_Click"
                        Margin="0,0,12,0" FontWeight="Normal"/>
                <Button Content="Create Account" Width="140"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Padding="8,10" FontSize="16"
                        Click="CreateAccount_Click" FontWeight="Normal"/>
            </StackPanel>
            
            <!-- Corporate User Link (disabled) -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,0"
                       IsEnabled="False"
                       Opacity="0.6">
                <TextBlock Text="Corporate user? " 
                           FontSize="14" 
                           Foreground="{StaticResource TextSecondary}"/>
                <TextBlock Text="Sign in here" 
                           FontSize="14" 
                           Foreground="{StaticResource TextSecondary}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
