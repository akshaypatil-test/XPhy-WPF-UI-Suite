<UserControl x:Class="InstallerUI.Views.FinishView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <!-- Content centered vertically and horizontally with proportional spacing -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="TitleText" Text="Installation Complete"
                       FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"
                       Margin="0,0,0,16" HorizontalAlignment="Center"/>
            <TextBlock x:Name="MessageText" Text="X-PHY Deepfake Detector has been successfully installed on your system"
                       FontSize="14" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"
                       Margin="0,0,0,20" HorizontalAlignment="Center" TextAlignment="Center" Width="348"/>
            <CheckBox x:Name="LaunchNowCheckBox" Content="Launch X-PHY Deepfake Detector now"
                      IsChecked="{Binding LaunchNow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullableBoolToBool}}"
                      Style="{StaticResource PrimaryCheckBoxStyle}"
                      FontWeight="Bold"
                      Visibility="{Binding InstallSucceeded, Converter={StaticResource BoolToVis}}"
                      Checked="LaunchNowCheckBox_Checked" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
