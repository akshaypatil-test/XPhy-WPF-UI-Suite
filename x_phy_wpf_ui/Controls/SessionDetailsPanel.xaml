<UserControl x:Class="x_phy_wpf_ui.Controls.SessionDetailsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">
    <UserControl.Resources>
        <SolidColorBrush x:Key="CardBg" Color="#FFFFFF" Opacity="0.08"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#999999"/>
        <SolidColorBrush x:Key="ResultRedBrush" Color="#E53935"/>
        <SolidColorBrush x:Key="ResultGreenBrush" Color="#43A047"/>
        <SolidColorBrush x:Key="OutcomePillBg" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="TealBrush" Color="#1AB4CC"/>
        <SolidColorBrush x:Key="PanelGlowBorder" Color="#1AB4CC"/>
    </UserControl.Resources>
    <StackPanel Margin="0,0,0,24">
        <TextBlock Text="Session Details" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,20"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="280"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*" MinWidth="280"/>
            </Grid.ColumnDefinitions>
            <!-- Left: Detection Result -->
            <Border Grid.Column="0" Background="{StaticResource CardBg}" CornerRadius="12" BorderThickness="0" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="#0D2E2E" CornerRadius="10" BorderBrush="{StaticResource PanelGlowBorder}" BorderThickness="1" Padding="16,14" Margin="0,0,0,24">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Detection Result" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" x:Name="DetailConfidencePercent" FontSize="32" FontWeight="Bold" VerticalAlignment="Center"/>
                            </Grid>
                            <Border Grid.Row="1" x:Name="DetailOutcomePill" CornerRadius="16" Padding="14,8" HorizontalAlignment="Left" Margin="8,0,0,0" BorderThickness="2">
                                <TextBlock x:Name="DetailOutcomeText" FontSize="14" FontWeight="SemiBold"/>
                            </Border>
                        </Grid>
                    </Border>
                    <!-- Date & Time -->
                    <Border Grid.Row="1" Background="#1A1A1A" CornerRadius="10" Padding="18,14" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Date &amp; Time:" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="DetailDateAndTime" FontSize="13" Foreground="{StaticResource TealBrush}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <!-- Media Source -->
                    <Border Grid.Row="2" Background="#1A1A1A" CornerRadius="10" Padding="18,14" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Media Source:" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="DetailMediaSource" FontSize="13" Foreground="{StaticResource TealBrush}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <!-- Detection Type -->
                    <Border Grid.Row="3" Background="#1A1A1A" CornerRadius="10" Padding="18,14" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Detection Type:" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="DetailDetectionType" FontSize="13" Foreground="{StaticResource TealBrush}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <!-- Duration -->
                    <Border Grid.Row="4" Background="#1A1A1A" CornerRadius="10" Padding="18,14">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Duration:" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" x:Name="DetailDuration" FontSize="13" Foreground="{StaticResource TealBrush}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            <!-- Right: Media Evidence -->
            <Border Grid.Column="2" Background="{StaticResource CardBg}" CornerRadius="12" BorderBrush="{StaticResource PanelGlowBorder}" BorderThickness="1" Padding="16">
                <Border.Effect>
                    <DropShadowEffect Color="#1AB4CC" BlurRadius="12" ShadowDepth="0" Opacity="0.4"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Media Evidence" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                    <TextBlock Grid.Row="1" Text="Original media used for analysis" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>
                    <!-- When no AI manipulation: show centered message -->
                    <Border Grid.Row="2" x:Name="MediaEvidenceNoManipulationPanel" Background="#0D0D0D" CornerRadius="8" MinHeight="120" Visibility="Collapsed">
                        <TextBlock x:Name="MediaEvidenceNoManipulationText" Text="No AI Manipulation Found" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TealBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <!-- When AI manipulation detected: two-image carousel (fills Media Evidence panel) -->
                    <Grid Grid.Row="2" x:Name="MediaEvidenceImagesGrid" VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition x:Name="MediaEvidenceImageRow" Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!-- Two images side-by-side like Figma: left (green) | divider | right (red) -->
                        <Grid Grid.Row="0" x:Name="MediaEvidenceTwoColumnGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MinWidth="120"/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition Width="*" MinWidth="120"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="#1A1A1A" CornerRadius="8" Margin="0,0,1,0" BorderBrush="{StaticResource ResultGreenBrush}" BorderThickness="2">
                                <Image x:Name="CarouselImageLeft" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                            </Border>
                            <Border Grid.Column="1" Background="#2A2A2A" Width="2"/>
                            <Border Grid.Column="2" Background="#1A1A1A" CornerRadius="8" Margin="1,0,0,0" BorderBrush="{StaticResource ResultRedBrush}" BorderThickness="2">
                                <Image x:Name="CarouselImageRight" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                            </Border>
                            <!-- Carousel prev/next over the full width -->
                            <Button Grid.Column="0" Grid.ColumnSpan="3" x:Name="CarouselPrevButton" Width="36" Height="36" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0"
                                    Background="#80000000" Foreground="White" FontSize="18" Content="‹" Cursor="Hand" BorderThickness="0" Click="CarouselPrev_Click"
                                    Visibility="Collapsed">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="18" Padding="0">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#B0000000"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Grid.Column="0" Grid.ColumnSpan="3" x:Name="CarouselNextButton" Width="36" Height="36" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0"
                                    Background="#80000000" Foreground="White" FontSize="18" Content="›" Cursor="Hand" BorderThickness="0" Click="CarouselNext_Click"
                                    Visibility="Collapsed">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="18" Padding="0">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#B0000000"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                        <TextBlock Grid.Row="1" x:Name="CarouselCounterText" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,8,0,0" Visibility="Collapsed"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <Button x:Name="BackToResultsButton" Content="Back to Results" HorizontalAlignment="Center" Margin="0,24,0,0" Padding="32,12" FontSize="14" FontWeight="SemiBold" Foreground="White" Background="#2A2A2A" BorderThickness="0" Cursor="Hand" Click="BackToResults_Click"/>
    </StackPanel>
</UserControl>
