<UserControl x:Class="x_phy_wpf_ui.Controls.TopNavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="56" Width="403">
    <UserControl.Resources>
        <SolidColorBrush x:Key="NavBarBackground" Color="#111111"/>
        <SolidColorBrush x:Key="NavBarBorder" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="AccentColor" Color="#E2156B"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF1AB4CC"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#999999"/>
        <Style x:Key="TopNavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TopNavSelectedButtonStyle" TargetType="Button" BasedOn="{StaticResource TopNavButtonStyle}">
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        </Style>
        <!-- Code-behind uses FindResource("SelectedTopNavButtonStyle") -->
        <Style x:Key="SelectedTopNavButtonStyle" TargetType="Button" BasedOn="{StaticResource TopNavButtonStyle}">
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        </Style>
    </UserControl.Resources>
    <Border Background="{StaticResource NavBarBackground}" 
            CornerRadius="20"
            BorderBrush="{StaticResource NavBarBorder}"
            BorderThickness="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="400"
            Padding="8,6,8,6">
        <Border.Effect>
            <DropShadowEffect Color="#FF1AB4CC" 
                              BlurRadius="200" 
                              ShadowDepth="0" 
                              Opacity="0.6"
                              Direction="0"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="35*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Home Button -->
            <Button Grid.Column="0" 
                    Style="{StaticResource TopNavSelectedButtonStyle}"
                    Click="Home_Click"
                    x:Name="HomeNavButton"
                    VerticalAlignment="Center"
                    Padding="4,4,4,4" Grid.ColumnSpan="2" Margin="0,0,95,0" Grid.Row="1">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ " FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,1"/>
                    <TextBlock Text="Home" FontSize="10" FontWeight="Medium" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Results Button -->
            <Button Grid.Column="1" 
                    Style="{StaticResource TopNavButtonStyle}"
                    Click="Results_Click"
                    x:Name="ResultsNavButton"
                    VerticalAlignment="Center"
                    Padding="4,4,4,4" Grid.Row="1">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“„" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,1"/>
                    <TextBlock Text="Results" FontSize="10" FontWeight="Medium" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Profile Button -->
            <Button Grid.Column="2" 
                    Style="{StaticResource TopNavButtonStyle}"
                    Click="Profile_Click"
                    x:Name="ProfileNavButton"
                    VerticalAlignment="Center"
                    Padding="4,4,4,4" Grid.Row="1">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ‘¤" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,1"/>
                    <TextBlock Text="Profile" FontSize="10" FontWeight="Medium" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Settings Button -->
            <Button Grid.Column="2" 
                    Style="{StaticResource TopNavButtonStyle}"
                    Click="Settings_Click"
                    x:Name="SettingsNavButton"
                    VerticalAlignment="Center"
                    Padding="4,4,4,4" Grid.ColumnSpan="2" Margin="95,0,0,0" Grid.Row="1">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="âš™ï¸" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,1"/>
                    <TextBlock Text="Settings" FontSize="10" FontWeight="Medium" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </Border>
</UserControl>
