<UserControl x:Class="x_phy_wpf_ui.Controls.PlansComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="CardColor" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#E2156B"/>
        <SolidColorBrush x:Key="PrimaryHoverColor" Color="#F0458A"/>
        <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#999999"/>
        <SolidColorBrush x:Key="BorderColor" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="StripeButtonBg" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="StripeButtonText" Color="#635BFF"/>
        <SolidColorBrush x:Key="PayPalButtonBg" Color="#0070BA"/>
        
        <!-- Gradient Brushes for Cards -->
        <LinearGradientBrush x:Key="Card1Gradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8B2D8B" Offset="0"/>
            <GradientStop Color="#4A1A4A" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="Card2Gradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#5A3A8B" Offset="0"/>
            <GradientStop Color="#2A1A4A" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="Card3Gradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2A5A8B" Offset="0"/>
            <GradientStop Color="#1A2A4A" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Plan Card Style -->
        <Style x:Key="PlanCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="MinHeight" Value="380"/>
            <Setter Property="MinWidth" Value="260"/>
        </Style>
        
        <!-- Stripe Button Style -->
        <Style x:Key="StripeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource StripeButtonBg}"/>
            <Setter Property="Foreground" Value="{StaticResource StripeButtonText}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- PayPal Button Style -->
        <Style x:Key="PayPalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#555555"/>
            <Setter Property="Foreground" Value="#999999"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Opacity="{TemplateBinding Opacity}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Back Button Style -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
                    <Setter Property="Background" Value="#2A2A2A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Back Button -->
        <Button Grid.Row="0"
                Content="← Back to Detection"
                Style="{StaticResource BackButtonStyle}"
                Click="BackButton_Click"
                Margin="0,0,0,8"
                HorizontalAlignment="Left"/>
        
        <!-- Header -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="Choose Your Plan"
                      FontSize="28"
                      FontWeight="Bold"
                      Foreground="{StaticResource TextColor}"
                      HorizontalAlignment="Left"/>
        </Grid>
        
        <!-- Loading/Error Message -->
        <TextBlock x:Name="StatusText"
                   Grid.Row="2"
                   Text="Loading plans..."
                   FontSize="16"
                   Foreground="{StaticResource SecondaryTextColor}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="Visible"/>
        
        <!-- Plans Container -->
        <ScrollViewer x:Name="PlansScrollViewer"
                      Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Visibility="Collapsed"
                      Padding="0">
            <ItemsControl x:Name="PlansItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" Rows="1" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="PlanCardBorder"
                                Style="{StaticResource PlanCardStyle}"
                                Tag="{Binding}"
                                Loaded="PlanCard_Loaded">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Plan Name -->
                                <TextBlock Grid.Row="0"
                                          Text="{Binding DisplayName}"
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="{StaticResource TextColor}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Top"
                                          TextWrapping="NoWrap"
                                          Margin="0,0,0,0"/>
                                
                                <!-- Price -->
                                <StackPanel Grid.Row="1"
                                          Orientation="Horizontal"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Top"
                                          Margin="0,12,0,0">
                                    <TextBlock Text="{Binding PriceText}"
                                              FontSize="32"
                                              FontWeight="Bold"
                                              Foreground="{StaticResource TextColor}"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding PriceSuffix}"
                                              FontSize="14"
                                              Foreground="{StaticResource SecondaryTextColor}"
                                              VerticalAlignment="Bottom"
                                              Margin="4,0,0,8"/>
                                </StackPanel>
                                
                                <!-- Features List -->
                                <StackPanel Grid.Row="2" Margin="0,12,0,12">
                                    <ItemsControl ItemsSource="{Binding Features}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                    <TextBlock Text="•"
                                                              Foreground="{StaticResource PrimaryColor}"
                                                              FontSize="16"
                                                              Margin="0,0,8,0"
                                                              VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding}"
                                                              Foreground="{StaticResource TextColor}"
                                                              FontSize="13"
                                                              TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                
                                <!-- Payment Method Label -->
                                <TextBlock Grid.Row="3"
                                          Text="Payment Method"
                                          FontSize="12"
                                          FontWeight="SemiBold"
                                          Foreground="{StaticResource SecondaryTextColor}"
                                          Margin="0,0,0,12"/>
                                
                                <!-- Payment Buttons - Stacked Vertically -->
                                <StackPanel Grid.Row="4">
                                    <Button Content="stripe"
                                            Style="{StaticResource StripeButtonStyle}"
                                            Click="StripeButton_Click"
                                            Tag="{Binding}"/>
                                    <Button Content="PayPal"
                                            Style="{StaticResource PayPalButtonStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
