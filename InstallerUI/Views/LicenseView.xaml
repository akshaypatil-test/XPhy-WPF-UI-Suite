<UserControl x:Class="InstallerUI.Views.LicenseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="200"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="End-User License Agreement"
                   FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"
                   Margin="0,0,0,8"/>
        <TextBlock Grid.Row="1" Text="Please read the following license agreement carefully."
                   FontSize="14" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,12"/>
        <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="16" Margin="0,0,0,16">
            <ScrollViewer x:Name="EulaScrollViewer" VerticalScrollBarVisibility="Auto"
                          ScrollChanged="EulaScrollViewer_ScrollChanged">
                <TextBlock x:Name="LicenseText" TextWrapping="Wrap" FontSize="12" Foreground="{StaticResource TextPrimary}"/>
            </ScrollViewer>
        </Border>
        <TextBlock Grid.Row="3" Text="Scroll to the bottom of the agreement to enable the I Accept button."
                   FontSize="12" Foreground="{StaticResource TextSecondary}" FontStyle="Italic"/>
    </Grid>
</UserControl>
