<Application x:Class="InstallerUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:InstallerUI"
             StartupUri="MainWindow.xaml"
             ShutdownMode="OnMainWindowClose">
    <!-- OnMainWindowClose: when user closes the window (X or Cancel/Finish), the app exits. Avoids installer staying in background. -->
    <Application.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:NullableBoolToBoolConverter x:Key="NullableBoolToBool"/>
        <local:InverseBooleanConverter x:Key="InverseBool"/>
        <local:InverseBooleanToVisibilityConverter x:Key="BoolToVisInverse"/>
        <local:ProgressToWidthConverter x:Key="ProgressToWidth"/>
        <!-- Installer shell: white content, blue primary, grey secondary (matches Figma) -->
        <SolidColorBrush x:Key="ContentBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="FooterBackground" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#000000"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#333333"/>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0078D4"/>
        <SolidColorBrush x:Key="PrimaryBlueHover" Color="#106EBE"/>
        <SolidColorBrush x:Key="PrimaryButtonDisabled" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="LogoPink" Color="#E2156B"/>
        <!-- Primary button: blue when enabled, grey when disabled (e.g. I Accept until EULA scrolled to bottom) -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryBlueHover}"/>
                </Trigger>
                <!-- Disabled state last so it overrides when I Accept (or any primary button) is disabled -->
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource PrimaryButtonDisabled}"/>
                    <Setter Property="Foreground" Value="#707070"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Secondary button: light grey (Cancel, Back) - thin darker border for progress screen -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E1E1E1"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
