<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Merge Brushes for Text Colors -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Typography Styles (use AppFontFamily from App.xaml) -->
    
    <!-- Title Styles -->
    <Style x:Key="Text.Title" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
    </Style>
    
    <Style x:Key="Text.TitleLarge" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
    </Style>
    
    <!-- Subtitle Styles -->
    <Style x:Key="Text.Subtitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
    </Style>
    
    <!-- Body Styles -->
    <Style x:Key="Text.Body" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
    </Style>
    
    <Style x:Key="Text.BodySecondary" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextSecondary}"/>
    </Style>
    
    <!-- Caption Styles -->
    <Style x:Key="Text.Caption" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextSecondary}"/>
    </Style>
    
    <Style x:Key="Text.CaptionBold" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextSecondary}"/>
    </Style>
    
    <Style x:Key="Text.CaptionSmall" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextSecondary}"/>
    </Style>
    
    <!-- Error Text -->
    <Style x:Key="Text.Error" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Error}"/>
    </Style>
    
    <Style x:Key="Text.ErrorMessage" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Error}"/>
    </Style>
    
    <!-- Button Text -->
    <Style x:Key="Text.Button" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
</ResourceDictionary>
