<UserControl x:Class="x_phy_wpf_ui.Controls.TopNavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="56" Width="403">
    <UserControl.Resources>
        <SolidColorBrush x:Key="NavBarBackground" Color="#111111"/>
        <SolidColorBrush x:Key="NavBarBorder" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="AccentColor" Color="#E2156B"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF1AB4CC"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#999999"/>
        <SolidColorBrush x:Key="NavBarTextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="NavBarHoverBackground" Color="#18FFFFFF"/>
        <Style x:Key="TopNavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource NavBarTextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource NavBarHoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TopNavSelectedButtonStyle" TargetType="Button" BasedOn="{StaticResource TopNavButtonStyle}">
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        </Style>
        <Style x:Key="SelectedTopNavButtonStyle" TargetType="Button" BasedOn="{StaticResource TopNavButtonStyle}">
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="10">
                            <Border.Effect>
                                <DropShadowEffect Color="#1AB4CC" BlurRadius="12" ShadowDepth="0" Opacity="0.7"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource NavBarHoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Border Background="{StaticResource NavBarBackground}" 
            CornerRadius="20"
            BorderBrush="{StaticResource NavBarBorder}"
            BorderThickness="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="400"
            Padding="8,6,8,6">
        <Border.Effect>
            <DropShadowEffect Color="#FF1AB4CC" 
                              BlurRadius="200" 
                              ShadowDepth="0" 
                              Opacity="0.6"
                              Direction="0"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="35*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Home Button (icon and text inherit Foreground from button style: white when unselected, accent when selected) -->
            <Button Grid.Column="0" 
                    Style="{StaticResource TopNavButtonStyle}"
                    Click="Home_Click"
                    x:Name="HomeNavButton"
                    VerticalAlignment="Center"
                    Padding="8,6" Grid.ColumnSpan="2" Margin="0,0,95,0" Grid.Row="1">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ " FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,1"/>
                    <TextBlock Text="Home" FontSize="10" FontWeight="Medium" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Results Button -->
            <Button Grid.Column="1" 
                    Style="{StaticResource TopNavButtonStyle}"
                    Click="Results_Click"
                    x:Name="ResultsNavButton"
                    VerticalAlignment="Center"
                    Padding="8,6" Grid.Row="1">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“„" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,1"/>
                    <TextBlock Text="Results" FontSize="10" FontWeight="Medium" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Profile Button -->
            <Button Grid.Column="2" 
                    Style="{StaticResource TopNavButtonStyle}"
                    Click="Profile_Click"
                    x:Name="ProfileNavButton"
                    VerticalAlignment="Center"
                    Padding="8,6" Grid.Row="1">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ‘¤" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,1"/>
                    <TextBlock Text="Profile" FontSize="10" FontWeight="Medium" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Settings Button -->
            <Button Grid.Column="2" 
                    Style="{StaticResource TopNavButtonStyle}"
                    Click="Settings_Click"
                    x:Name="SettingsNavButton"
                    VerticalAlignment="Center"
                    Padding="8,6" Grid.ColumnSpan="2" Margin="95,0,0,0" Grid.Row="1">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="âš™ï¸" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,1"/>
                    <TextBlock Text="Settings" FontSize="10" FontWeight="Medium" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Add corp user (Admin only) -->
            <Button Grid.Column="4" Grid.Row="1"
                    x:Name="AddCorpUserButton"
                    Visibility="Collapsed"
                    Style="{StaticResource TopNavButtonStyle}"
                    Click="AddCorpUser_Click"
                    VerticalAlignment="Center"
                    Padding="6,4" Margin="8,0,0,0">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="âž•" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,1"/>
                    <TextBlock Text="Corporate User" FontSize="9" FontWeight="Medium" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </Border>
</UserControl>
